package org.xclcharts.chart;

import org.xclcharts.renderer.XEnum;

public class BaseData {
	
	
	private float mLabOffsetLeft = 0.0f;
	private float mLabOffsetTop = 0.0f;
	private float mLabOffsetRight = 0.0f;
	private float mLabOffsetBottom = 0.0f;
	
	private int mLabBoxColor = -1;
	private boolean mLabBox = true;
	
	public BaseData() {
		// TODO Auto-generated constructor stub
	}
	

	public void setLabelsOffset(XEnum.Location location,float value)
	{
		switch(location)
		{
			case LEFT:
					mLabOffsetLeft = value;
					break;
			case TOP:
					mLabOffsetTop = value;
					break;
			case RIGHT:
					mLabOffsetRight = value;
					break;
			case BOTTOM:
					mLabOffsetBottom = value;
					break;
		}
	}
	
	public void setLabelsBgColor(int color)
	{
		mLabBoxColor = color;
	}
	
	public void showLabelsBox()
	{
		mLabBox = true;
	}
	
	public void hideLabelsBox()
	{
		mLabBox = false;
	}
	
	public boolean isShowLabelsBox()
	{
		return mLabBox;
	}
}
