package org.xclcharts.renderer.plot;

import android.graphics.Color;

public class PlotQuadrant {
	
	private int mFirstColor = Color.WHITE;
	private int mSecondColor= Color.WHITE;
	private int mThirdColor = Color.WHITE;
	private int mFourthColor = Color.WHITE;
	
	private boolean mShowBgColor = true;
	private boolean mShowVerticalLine = true;
	private boolean mShowHorizontalLine = true;

	public PlotQuadrant()
	{
	}
	
	public void showBgColor()
	{
		mShowBgColor = true;
	}
	
	public void hideBgColor()
	{
		mShowBgColor = false;
	}
	
	public void showVerticalLine()
	{
		mShowVerticalLine = true;
	}
	
	public void hideVerticalLine()
	{
		mShowVerticalLine = false;
	}
	
	public void showHorizontalLine()
	{
		mShowHorizontalLine = true;
	}
	
	public void hideHorizontalLine()
	{
		mShowHorizontalLine = false;
	}
	
	public void setBgColor(int first,int second,int third,int fourth)
	{
		mFirstColor = first;
		mSecondColor = second;
		mThirdColor = third;
		mFourthColor = fourth;
	}
	
	

}
