package org.xclcharts.event.click;

import android.graphics.PointF;
import android.graphics.RectF;

public class PlotPointPosition extends PointPosition{
	
	public PlotPointPosition()
	{	
	}
	
	public PointF getPosition()
	{
		return mPoint;
	}
		
	
	protected void savePosition(float x,float y)
	{
		mPoint = new PointF();
		
		mPoint.x =  x;
		mPoint.y =  y;				
	}
	
	
	//当前记录在数据源中行号
	public void savePlotDataID(int num)
	{
		saveDataID(num);
	}

	//当前记录所属数据集的行号
	public void savePlotDataChildID(int num)
	{
		saveDataChildID(num);
	}	
		
	
	public void savePlotPosition(float x,float y)
	{
		savePosition(x,y);				
	}
	
	public void savePlotRectF(float left,float top,float right,float bottom)
	{		
		saveRectF(left, top, right, bottom);
	}
	
	public void savePlotRectF(RectF r)
	{
		saveRectF(r);
	}
}
