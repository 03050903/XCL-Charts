package org.xclcharts.renderer.plot;

import android.graphics.Color;

public class PlotQuadrant {
	
	private int mFirstColor = -1;
	private int mSecondColor= -1;
	private int mThirdColor = -1;
	private int mFourthColor = -1;
	
	private boolean mShowBgColor = false;
	private boolean mShowVertical = true;
	private boolean mShowHorizontalLine = true;

	public PlotQuadrant()
	{
	}
	
	public void showBgColor()
	{
		mShowBgColor = true;
	}
	
	public void hideBgColor()
	{
		mShowBgColor = false;
	}
	
	public void setBgColor(int first,int second,int third,int fourth)
	{
		mFirstColor = first;
		mSecondColor = second;
		mThirdColor = third;
		mFourthColor = fourth;
	}
	
	

}
