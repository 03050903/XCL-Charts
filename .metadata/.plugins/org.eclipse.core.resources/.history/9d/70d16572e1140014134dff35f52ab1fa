package org.xclcharts.event;

import android.graphics.Point;
import android.graphics.Rect;
import android.graphics.RectF;
import android.graphics.Region;
import android.util.Log;

/**
 * @ClassName PlotDataRecord
 * @Description  图的数据集
 * @author XiongChuanLiang<br/>(xcl_168@aliyun.com)
 */

public class PlotPositionRecord extends PositionRecord {	
	
	private static final String TAG = "PlotPositionRecord";
	public PlotPositionRecord()
	{	
	}
	
	//当前记录在数据源中行号
	public void saveDataRownum(int num)
	{
		mDataRownum = num;
	}

	//当前记录所属数据集的行号
	public void saveDataChildRownum(int num)
	{
		mDataChildRownum = num;
	}	
	
	//分类轴的行号
	public void saveCategoryRownum(int num)
	{
		mCategoryRownum = num;
	}
	
	public void savePosition(float lineEndX,float lineEndY)
	{
		mPoint = new Point();
		
		mPoint.x = (int) lineEndX;
		mPoint.y = (int) lineEndY;				
	}
	
	public void setRectF(float left,float top,float right,float bottom)
	{
		if(null == mRectF)mRectF = new RectF();		
		mRectF.set(left, top, right, bottom);
	}
	
	public void setRegion(Region rg)
	{
		
		mRegion = rg;
		
		//mRegion.getBounds(r);
	}
	
	
	public void setRect(Rect r)
	{
		
		if(null == mRegion)
		{
			mRegion = new Region(r);		
		}else{
			mRegion.set(r);
		}
		
		if(mRegion.isEmpty())
		{
			Log.e(TAG, "is empty");
			
		}
		
		//mRegion.getBounds(r);
	}
	
	public void saveRectF(RectF r)
	{
		mRectF = r;
	}
	
}
